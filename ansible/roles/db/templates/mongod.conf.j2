{# Где и как храним данные #}
storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true

{# Куда пишем логи #}
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

{# Сетевой интерфейс #}
net:
  port: {{ mongo_port | default('27017') }}
  bindIp: {{ mongo_bind_ip }}
